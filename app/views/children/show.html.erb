<%- model_class = Child -%>
<div class="page-header">
  <h1><%=t '.title', :default => Child %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @child.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @child.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:birthday) %></dt>
      <dd><pre class="prettyprint"><%= @child.birthday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gender) %></dt>
      <dd><pre class="prettyprint"><%= @child.gender %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              children_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_child_path(@child), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              child_path(@child),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

